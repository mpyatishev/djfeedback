.b-dj-feedback._theme_tour {
    .b-dj-feedback__form {
        box-sizing: border-box;
        margin: 0;
        padding: 10px 20px;

        fieldset {
            margin: 0;
            padding: 0;
            border: none;
        }

        p {
            margin: 0;

            + p {
                margin-top: 10px;
            }
        }

        label {
            display: block;
            margin-bottom: 2px;
        }

        /*
        * 1 - in pixels for height without scroll
        * 2 - line-height * 6 rows + 6px
        */

        textarea {
            box-sizing: border-box;
            min-height: 114px;
            max-height: 18px * 12;
            width: 100%;
            height: 114px; /* 2 */
            font-size: 16px;
            line-height: 18px; /* 1 */
            resize: vertical;
        }

        select {
            margin-top: .275em;
        }

        &._state_ajax-waiting {
        }
    }
}
